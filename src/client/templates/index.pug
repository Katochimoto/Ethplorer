- htmlWebpackPlugin.options.lang = htmlWebpackPlugin.options.lang || "en"

doctype html
html(class="h-100" lang=htmlWebpackPlugin.options.lang manifest=htmlWebpackPlugin.files.manifest)
  head
    include includes/head.pug
    each css in htmlWebpackPlugin.files.css
      link(href=css rel="stylesheet" crossorigin="anonymous")
  body(class="d-flex flex-column h-100")
    nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
      div.container
        a(class="navbar-brand" href="#") Container
        button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample07" aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon

        div(class="collapse navbar-collapse" id="navbarsExample07")
          ul(class="navbar-nav mr-auto")
            li(class="nav-item active")
              a(class="nav-link" href="#") Home
                span(class="sr-only") (current)
            li(class="nav-item")
              a(class="nav-link" href="#") Link
            li(class="nav-item")
              a(class="nav-link disabled" href="#") Disabled
            li(class="nav-item dropdown")
              a(class="nav-link dropdown-toggle" href="#" id="dropdown07" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Dropdown
              div(class="dropdown-menu" aria-labelledby="dropdown07")
                a(class="dropdown-item" href="#") Action
                a(class="dropdown-item" href="#") Another action
                a(class="dropdown-item" href="#") Something else here
          form(class="form-inline my-2 my-md-0")
            input(class="form-control" type="text" placeholder="Search" aria-label="Search")

    main(role="main" class="flex-shrink-0")
      div.container qwe

    include includes/foot.pug
    each js in htmlWebpackPlugin.files.js
      script(type="text/javascript" src=js defer)
