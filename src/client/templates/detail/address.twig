{% if data and data.token %}
    <div class="row">
        <div class="col">
            {% include '@components/detail/header.twig' with {
                'header': header,
                'data': data,
            } %}
        </div>
    </div>

    <div class="row">
        <div class="col mb-4">
            <div id="token-price-history-grouped-widget"></div>
        </div>
    </div>

    {% if data.token.alert %}
    <div class="alert alert-danger text-center mb-4" role="alert">
        {{ data.token.alert|raw }}
    </div>
    {% endif %}

    <div class="row">
        <div class="col-md mb-4">
            {% include '@components/detail/information.twig' with {
                'data': data,
            } %}
        </div>
        <div class="col-md mb-4">
            {% if data.isContract and data.contract and data.contract.isChainy %}
                {% include '@components/detail/chainy-information.twig' %}
            {% endif %}

            {% if data.isContract and data.token %}
                {% include '@components/detail/token-information.twig' with {
                    'data': data,
                    'config': config,
                } %}
            {% else %}
                {% include '@components/detail/balances.twig' with {
                    'data': data,
                    'config': config,
                } %}
            {% endif %}
        </div>
    </div>

    {% if not data.contract or not data.contract.isChainy %}
    <div class="row">
        <div class="col mb-4">
            {% include '@components/detail/token.twig' with {
                'ctx': ctx,
                'data': data,
                'config': config,
            } %}
        </div>
    </div>
    {% endif %}

    {% include '@components/disqus.twig' %}
{% elseif error %}
    <div class="row">
        <div class="col mb-4 text-center text-danger">
            <h1 class="h2 mt-4">ERROR</h1>
            <h3 class="h4">Invalid request</h1>
        </div>
    </div>
{% else %}
    <div class="loader text-center">
        <div class="loader-wrapper">
            <div class="dot-loader">
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
            </div>
        </div>
        <div class="loader-text">search in progress...</div>
    </div>
{% endif %}
