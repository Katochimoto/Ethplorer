<div class="card border-0">
    <div class="card-header text-dark py-2 d-flex align-items-center justify-content-between">
        <h3 class="h4 p-0 m-0">Token {{token.name}} Information</h3>
        {% if config.updateLink %}
        <div>
            <a href="{{config.updateLink}}" target="_blank" class="text-primary">Update</a>
        </div>
        {% endif %}
    </div>
    <table class="table table-borderless table-striped m-0 table-dark table-sm">
        <tbody>
            {% if token.symbol %}
            <tr>
                <th scope="row">Symbol</th>
                <td>{{token.symbol}}</td>
            </tr>
            {% endif %}
            {% if token.price %}
            <tr>
                <th scope="row">Price</th>
                <td>{{ token.price|price }}</td>
            </tr>
            {% endif %}
            {% if token.totalSupply %}
            <tr>
                <th scope="row" class="text-nowrap">Total Supply</th>
                <td>{{token.totalSupply}}</td>
            </tr>
            {% endif %}
            {% if token.decimals %}
            <tr>
                <th scope="row">Decimals</th>
                <td>{{token.decimals}}</td>
            </tr>
            {% endif %}
            {% if token.owner %}
            <tr>
                <th scope="row">Owner</th>
                <td>{{ token.owner|ethplorer(data) }}</td>
            </tr>
            {% endif %}
            {% if token.transfersCount %}
            <tr>
                <th scope="row">Transfers</th>
                <td>{{token.transfersCount}}</td>
            </tr>
            {% endif %}
            {% if token.issuancesCount %}
            <tr>
                <th scope="row">Issuances</th>
                <td>{{token.issuancesCount}}</td>
            </tr>
            {% endif %}
            {% if token.holdersCount %}
            <tr>
                <th scope="row">Holders</th>
                <td>{{token.holdersCount}}</td>
            </tr>
            {% endif %}
        </tbody>
    </table>
</div>
