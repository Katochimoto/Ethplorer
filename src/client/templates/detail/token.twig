{% set activeTab = ctx.getStateParam('tab', 'tab-transfers') %}

<div class="card border-0 bg-transparent">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <ul id="token-tabs" class="nav nav-tabs card-header-tabs" role="tablist">
            <li class="nav-item">
                <a
                    class="{{ classnames({
                        'nav-link': true,
                        'active': activeTab == 'tab-transfers',
                        'disabled': data.loading,
                    }) }}"
                    id="transfers-tab"
                    href="#transfers"
                    role="tab"
                    data-toggle="tab"
                    aria-controls="transfers"
                    aria-selected="{% if activeTab == 'tab-transfers' %}true{% else %}false{% endif %}"
                >Transfers</a>
            </li>
            <li class="nav-item">
                <a
                    class="{{ classnames({
                        'nav-link': true,
                        'active': activeTab == 'tab-issuances',
                        'disabled': data.loading,
                    }) }}"
                    id="issuances-tab"
                    href="#issuances"
                    role="tab"
                    data-toggle="tab"
                    aria-controls="issuances"
                    aria-selected="{% if activeTab == 'tab-issuances' %}true{% else %}false{% endif %}"
                >Issuances</a>
            </li>
            <li class="nav-item">
                <a
                    class="{{ classnames({
                        'nav-link': true,
                        'active': activeTab == 'tab-holders',
                        'disabled': data.loading,
                    }) }}"
                    id="holders-tab"
                    href="#holders"
                    role="tab"
                    data-toggle="tab"
                    aria-controls="holders"
                    aria-selected="{% if activeTab == 'tab-holders' %}true{% else %}false{% endif %}"
                >Holders</a>
            </li>
        </ul>
        {% if data.loading %}
            <i class="fas fa-spinner fa-lg fa-spin text-dark"></i>
        {% endif %}
    </div>
    <div id="token-tabsContent" class="tab-content">
        <div class="tab-pane fade{% if activeTab == 'tab-transfers' %} show active{% endif %}" id="transfers" role="tabpanel" aria-labelledby="transfers-tab">
            {% include '@components/detail/token-transfers.twig' with {
                'ctx': ctx,
                'data': data,
                'config': config,
            } %}
        </div>
        <div class="tab-pane fade{% if activeTab == 'tab-issuances' %} show active{% endif %}" id="issuances" role="tabpanel" aria-labelledby="issuances-tab">
            {% include '@components/detail/token-issuances.twig' with {
                'ctx': ctx,
                'data': data,
                'config': config,
            } %}
        </div>
        <div class="tab-pane fade{% if activeTab == 'tab-holders' %} show active{% endif %}" id="holders" role="tabpanel" aria-labelledby="holders-tab">
            {% include '@components/detail/token-holders.twig' with {
                'ctx': ctx,
                'data': data,
                'config': config,
            } %}
        </div>
    </div>
</div>
<div class="px-3 py-2 small">
    * all dates are displayed for GMT+7 timezone
</div>
