{{#> layout }}
<div class="container">
    <h1 class="mt-5 font-weight-bold">Ethereum Tokens Explorer</h1>
    <p class="h5 font-weight-bold mb-4">
        Your friendly gate into the Ethereum tokens world
    </p>
    <form
        class="mb-4 d-flex flex-column flex-sm-row align-items-sm-start"
        action="/search/"
        method="POST"
        novalidate
    >
