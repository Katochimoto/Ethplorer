{% extends "./layout.twig" %}
{% set page = 'address' %}

{% block page %}{{page}}{% endblock %}

{% block title %}
    {% verbatim %}
        {{title}}
    {% endverbatim %}
{% endblock %}

{% block meta %}
    <meta name="referrer" content="never" />
    <meta name="referrer" content="no-referrer" />
    <meta name="description" content="" />
{% endblock %}

{% block content %}
<div class="container">
    {% include '@components/adsbygoogle.twig' %}
</div>

<div id="app" class="container d-flex flex-column flex-fill">
    {% verbatim %}
        {% if page == 'address' %}
            {% include '@components/detail/address.twig' with {
                'header': header,
                'error': error
            } %}
        {% endif %}
    {% endverbatim %}
</div>
{% endblock %}

{% block jsExtensions %}
<script src="https://www.google.com/jsapi"></script>
{% endblock %}

{% block scripts %}
{% verbatim %}
    <script>
        window.__DATA__ = {
            header: "{{header}}"
        };

        {{ scriptAddon|raw }}
    </script>
{% endverbatim %}
{% endblock %}

