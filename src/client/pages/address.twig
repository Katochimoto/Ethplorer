{% extends "./layout.twig" %}
{% set page = 'address' %}

{% block page %}{{page}}{% endblock %}

{% block title %}
    {% verbatim %}
        {{title}}
    {% endverbatim %}
{% endblock %}

{% block meta %}
    <meta name="referrer" content="never" />
    <meta name="referrer" content="no-referrer" />
    <meta name="description" content="" />
{% endblock %}

{% block content %}
<div class="container">
    {% include '../components/adsbygoogle.twig' %}
</div>

<div id="app" class="container mb-4">
    {% verbatim %}
        {% if error %}
            <div class="row">
                <div class="col mb-4 text-center text-danger">
                    <h1 class="h2 mt-4">ERROR</h1>
                    <h3 class="h4">Invalid request</h1>
                </div>
            </div>
        {% else %}
            <div class="row">
                <div class="col mb-4 text-center text-xl-left">
                    <h1 class="h3 mt-4">{{header}}</h1>
                </div>
            </div>
        {% endif %}
    {% endverbatim %}
</div>

{% include '../components/disqus.twig' %}
{% endblock %}
