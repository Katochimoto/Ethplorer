{% extends "./layout.twig" %}
{% set page = 'address' %}

{% block page %}{{page}}{% endblock %}

{% block title %}
    {% verbatim %}
        {{title}}
    {% endverbatim %}
{% endblock %}

{% block meta %}
    <meta name="referrer" content="never" />
    <meta name="referrer" content="no-referrer" />
    <meta name="description" content="" />
{% endblock %}

{% block content %}
<div class="container">
    {% include '../templates/adsbygoogle.twig' %}
</div>

<div id="app" class="container mb-4">
    {% verbatim %}
        {% if error %}
            <div class="row">
                <div class="col mb-4 text-center text-danger">
                    <h1 class="h2 mt-4">ERROR</h1>
                    <h3 class="h4">Invalid request</h1>
                </div>
            </div>
        {% else %}
            <div class="row">
                <div class="col mb-4 text-center text-xl-left">
                    <h1 class="h3 mt-4">{{header}}</h1>
                </div>
            </div>
        {% endif %}

        {% if page == 'address' %}
            <div class="row">
                <div class="col mb-4">
                    <div id="token-price-history-grouped-widget"></div>
                </div>
            </div>
            {# <div class="alert alert-danger text-center mb-4" role="alert">
                A simple danger alertâ€”check it out!
            </div> #}
            <div class="row">
                <div class="col-md mb-4">
                    <div class="card border-0">
                        <h3 class="h4 card-header text-dark py-2">Address Information</h3>
                        <table class="table table-borderless table-striped m-0 table-dark table-sm">
                            <tbody>
                                <tr>
                                    <th scope="row" width="1">Address</th>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row">Created At</th>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row">Creator</th>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row">Create Tx</th>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row">Balance</th>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row">Total In</th>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row">Total Out</th>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row">Transactions</th>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row">Transactions</th>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md mb-4">
                    <div class="card border-0">
                        <div class="card-header text-dark py-2 d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <h3 class="h4 p-0 m-0">Balances</h3>
                                <sup class="ml-1">
                                    <i
                                        class="fa fa-question-circle"
                                        data-toggle="tooltip"
                                        data-placement="right"
                                        title="ETH&nbsp;+&nbsp;Tokens"
                                    ></i>
                                </sup>
                            </div>
                            <div class="text-secondary font-weight-bold">
                                ~ $&nbsp;0.68
                                <span class="text-success">(+1.7%)</span>
                            </div>
                        </div>
                        <table class="table table-borderless table-striped m-0 table-dark table-sm">
                            <tbody>
                                <tr>
                                    <th scope="row" width="1">Address</th>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col mb-4">
                    <div class="card border-0">
                        <div class="card-header">
                            <ul class="nav nav-tabs card-header-tabs">
                                <li class="nav-item">
                                    <a class="nav-link active" href="#">Transfers</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Issuances</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Holders</a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body text-dark p-0">
                            <div class="d-flex align-items-center justify-content-between">
                                <h3 class="h4 card-title py-2 px-3 m-0">Transfers</h3>
                                <form class="form-inline p-2 justify-content-end">
                                    <div class="form-group">
                                        <div class="form-check form-check-inline">
                                            <label class="form-check-label" for="inlineCheckbox1">
                                                ETH
                                                <sup class="text-danger mx-1">new</sup>
                                            </label>
                                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <label class="form-check-label" for="inlineCheckbox2">
                                                Tokens
                                                <sup class="text-danger mx-1">new</sup>
                                            </label>
                                            <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-sm" placeholder="Filter by address or hash">
                                    </div>
                                </form>
                            </div>

                            <table class="table table-borderless table-striped m-0 table-dark table-sm">
                                <tbody>
                                    <tr>
                                        <th scope="row" width="1"></th>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <select class="form-control form-control-sm w-auto mr-3">
                                    <option>10</option>
                                    <option>25</option>
                                    <option>50</option>
                                    <option>100</option>
                                </select>
                                <small class="text-muted">
                                    * all dates are displayed for GMT+7 timezone
                                </small>
                            </div>
                            <nav aria-label="...">
                                <ul class="pagination pagination-sm m-0">
                                    <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item active" aria-current="page">
                                    <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

        {% endif %}
    {% endverbatim %}
</div>

{% include '../templates/disqus.twig' %}
{% endblock %}

{% block jsExtensions %}
<script src="https://www.google.com/jsapi"></script>
{% endblock %}
